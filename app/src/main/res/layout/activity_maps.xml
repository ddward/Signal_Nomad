
<!--DW: XML layout definitions, two buttons added and linked to functions in the MapsActivity class to allow user interaction-->

<fragment xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:map="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/map"
    android:name="com.google.android.gms.maps.SupportMapFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.david.myapplication.MapsActivity" >

    <Button
        android:id="@+id/button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:onClick="pindrop"
        android:layout_marginLeft="8dp"
        android:shadowColor="@color/colorAccent"
        android:text="@string/button1" />
    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="clearmarkers"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"
        android:text="@string/button2"/>
</fragment>